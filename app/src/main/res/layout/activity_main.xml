    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        android:background="#9D9E9E"
        app:layout_constraintBottom_toBottomOf="@id/gl_h_33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@id/gl_h_33" />

    <View
        android:id="@+id/view2"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#9D9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_v_33"
        app:layout_constraintStart_toStartOf="@+id/gl_v_33"
        app:layout_constraintTop_toTopOf="parent"
